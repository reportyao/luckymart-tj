{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "prisma/generated/**",
    "__tests__/**",
    "test/**",
    "test-reports/**",
    "shell_output_save/**",
    "tmp/**",
    "scripts/benchmark*.ts",
    "scripts/*test*.ts",
    "scripts/*demo*.ts",
    "scripts/*verify*.ts",
    "scripts/*check*.ts",
    "scripts/*seed*.ts",
    "scripts/*init*.ts",
    "scripts/*run*.ts",
    "scripts/*generate*.ts",
    "scripts/*migrate*.ts",
    "scripts/*supplement*.ts",
    "scripts/*deploy*.ts",
    "scripts/*final*.ts",
    "scripts/*demo*.js",
    "scripts/*verify*.js",
    "scripts/*check*.js",
    "scripts/*generate*.js",
    "scripts/*supplement*.js",
    "scripts/*deploy*.js",
    "scripts/*final*.js",
    "bot/test/**",
    "bot/*test*.ts",
    "bot/*demo*.ts",
    "bot/*verify*.ts",
    "lib/*test*.ts",
    "lib/*test*.js",
    "utils/*test*.ts",
    "utils/*test*.js",
    "hooks/*test*.ts",
    "hooks/*test*.js",
    "components/*test*.tsx",
    "components/*test*.jsx",
    "components/*demo*.tsx",
    "components/*demo*.jsx",
    "app/*demo*.tsx",
    "app/*demo*.jsx",
    "examples/**",
    "utils/**/examples/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/test_*.ts",
    "**/test_*.js",
    "**/verify_*.ts",
    "**/verify_*.js",
    "**/demo_*.ts",
    "**/demo_*.js",
    "**/*_demo*.ts",
    "**/*_demo*.js",
    "**/*_test*.ts",
    "**/*_test*.js"
  ]
}
